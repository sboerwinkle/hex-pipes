<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main_outer"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Instance of TestViewGroup added here programmatically -->
    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="12pt"
        android:textSize="12pt"
        android:textColor="#000000"
        android:textAlignment="textEnd"
        android:layout_gravity="end|bottom"
        android:includeFontPadding="false"
        android:layout_marginEnd="4pt"
        android:layout_marginRight="4pt"
        android:layout_marginBottom="4pt"
        />
    <ImageButton
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:layout_gravity="start|top"
        android:padding="4pt"
        android:src="@drawable/pixel_star"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:onClick="starClicked"
        android:contentDescription="@string/star_descr" />
    <ImageButton
        android:layout_width="20pt"
        android:layout_height="20pt"
        android:layout_gravity="start|bottom"
        android:padding="4pt"
        android:src="@drawable/pixel_lock"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:onClick="lockClicked"
        android:contentDescription="@string/lock_descr" />
</FrameLayout>