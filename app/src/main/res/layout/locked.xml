<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/locked_outer"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/locked_time"
        android:layout_width="wrap_content"
        android:layout_height="36pt"
        android:textSize="36pt"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal|bottom"
        android:includeFontPadding="false"
        android:layout_marginBottom="4pt"
        />
    <!--44 pt margin below is for spacing around 36pt text above-->
    <!--Also, do we need adjustViewBounds=true ?-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginStart="4pt"
        android:layout_marginLeft="4pt"
        android:layout_marginEnd="4pt"
        android:layout_marginRight="4pt"
        android:layout_marginBottom="44pt"
        android:layout_marginTop="44pt"
        android:scaleType="fitCenter"
        android:src="@drawable/pixel_lock"
        android:contentDescription="@string/locked_descr" />
</FrameLayout>